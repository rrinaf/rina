<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.dramas.each do |t| %>
  <%= t.user.name %>
  <%= t.body %>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.gooded_dramas.each do |t| %>
  <%= t.user.name %>
  <%= t. title %>
  <%= t. emotion %>
  <%= t. highlight %>
  <%= t. recommendation %>

<% end %>

<%= link_to "Drama一覧に戻る", dramas_path %>